#COLORES
set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# class                 border  backgr. text    indicator child_border
client.focused          #BF4080 #5294e2 #ffffff #c7613e   #3a426e
client.focused_inactive #383C4A #383C4A #ffffff #484e50   #383C4A
client.unfocused        #383C4A #383C4A #b1becd #798386   #798386
client.urgent           #383C4A #BF4080 #3FCFAB #BF4080   #BF4080
client.placeholder      #383C4A #383C4A #b1becd #383C4A   #383C4A
client.background       #383C4A


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
set $bg-colorT #00000000

bar {
        i3bar_command i3bar -t
        status_command i3blocks
        position top
            colors {
                background $bg-colorT
                separator #757575
                #                  border             background         text
                focused_workspace  $bg-colorT          $bg-colorT          $text-color
                inactive_workspace $bg-colorT $bg-colorT $inactive-text-color
                urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
            }
}

################################################################################
# Power management		                                                       #
################################################################################

#menu de apagado
set $Locker i3lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock-fancy -p , mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id i3lock-fancy -p && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id i3lock-fancy -p && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#bind menu apagado
bindsym $mod+F4 mode "$mode_system"

#bind acceso directo a unculinux
bindsym $mod+U workspace 3 $ws3 ; exec konsole --hide-menubar -e ranger /home/rulo/Documentos/UNCU\ LINUX/

################################################################################
# TO-DO				                                                           #
################################################################################
#bind acceso directo a todo list para funcionar necesita el programa todo
set $todo_list TODO: (a) añadir,(s) mostrar,(e) editar, (d) borrar

#el script ~/bin/stodo.sh muestra el contenido de todo
#para (e) y (d) le paso a todo "zenity", un creador de ventanas que me deja meter info como por ej los
#nros de los elementos a borrar o editar

for_window [instance="pica"] move to scratchpad ; scratchpad show
bindsym $mod+Shift+S scratchpad show

mode "$todo_list"{
	bindsym a exec urxvt -name pica +sb -e todo -a && ~/bin/stodo.sh  , mode "default" 
	bindsym b exec bash -c todo > /home/rulo/todof.txt  &&  notify-send "Aguante Windows" "`tail /home/rulo/todof.txt`" -i /home/rulo/Imágenes/gates_page.png , mode "default"
	bindsym s exec ~/bin/stodo.sh , mode "default"
	#modo de muestra alternativo:
	bindsym shift+s exec urxvt -name pica +sb -hold -e todo , mode "default"
	bindsym e exec urxvt -name pica +sb -e todo -e `zenity --entry --text="Item a editar"` && ~/bin/stodo.sh , mode "default"
	bindsym d exec todo -r `zenity --entry --text="Item(s) a borrar"` && ~/bin/stodo.sh , mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+T mode "$todo_list" 

#recordatorio de mis tareas al iniciar sistema
exec_always ~/bin/stodo.sh

